    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/contract/list</url-pattern>
        <url-pattern>/contract/delete</url-pattern>
        <url-pattern>/contract/update</url-pattern>
        <url-pattern>/contract/detail</url-pattern>

