<!-->>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> 权限拦截 >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>-->
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.zhiyou.servlet.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <!--员工的权限 -> 添加 更新-->
        <url-pattern>/contract/update</url-pattern>
        <url-pattern>/house/update</url-pattern>
        <url-pattern>/lessee/update</url-pattern>
        <url-pattern>/rent/update</url-pattern>

        <url-pattern>/contract/add</url-pattern>
        <url-pattern>/house/add</url-pattern>
        <url-pattern>/lessee/add</url-pattern>
        <url-pattern>/rent/add</url-pattern>

        <!--经理的权限 -> 删除-->
        <url-pattern>/contract/delete</url-pattern>
        <url-pattern>/house/delete</url-pattern>
        <url-pattern>/lessee/delete</url-pattern>
        <url-pattern>/rent/delete</url-pattern>
    </filter-mapping>

    <!--============================= 编码格式拦截 =============================-->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.zhiyou.servlet.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--============================= 登陆拦截 =============================-->
